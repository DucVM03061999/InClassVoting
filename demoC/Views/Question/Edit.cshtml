
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="bg-gray-100 flex-1 p-6 md:mt-16">
        <div class="grid xl:grid-cols-1 xl:fixed xl:w-full lg:fixed lg:w-full md:fixed md:w-full">

            <div class="topcontent xl:fixed xl:w-full lg:fixed lg:w-full md:fixed md:w-full md:top-0 md:z-20 items-center border bg-gray p-6  border-black-400">
                <div>
                    <input class="border border-black-400 pl-1 float-right ml-5" size="3" type="text" name="create-question-mark" placeholder="Mark">
                    <input class="border border-black-400 pl-1 float-right" size="3" type="text" name="create-question-time" placeholder="Time">
                </div>
            </div>

            <div class="xl:fixed xl:w-full lg:fixed lg:w-full md:fixed md:w-full md:top-0 md:z-20 items-center bg-gray p-6 border border-black-400">
                <h1 class="h6">
                    <span>Question Type:</span>
                    <span>Multiple Choice</span>
                </h1>
                <input type="checkbox" class="form-check-input" id="cb-option2" name="mixChoice" value="1" checked> Mix Choice
                <input type="hidden" class="form-check-input" id="cb-option2" name="mixChoice" value="0">
            </div>

            <div class="xl:fixed xl:w-full lg:fixed lg:w-full md:fixed md:w-full md:top-0 md:z-20 items-center bg-gray p-6 border border-black-400">
                <div>
                    <textarea class="p-2 w-full" name="create-question-question" rows="4" id="question" placeholder="Question ..." >How many trees in the garden?</textarea>
                </div>

            </div>

            <div class="xl:fixed xl:w-full lg:fixed lg:w-full md:fixed md:w-full md:top-0 md:z-20 items-center bg-gray p-6 border border-black-400">
                <table class="w-full border-spacing-2">
                    <tr>
                        <td class=""><input type="checkbox" class="form-check-input" id="cb-option1" name="cb-option1" value="1" checked></td>
                        <td><input type="text" class="w-full pl-3" name="option1" value="3"></td>
                    </tr>
                    <tr>
                        <td class=""><input type="checkbox" class="form-check-input" id="cb-option2" name="cb-option2" value="2"></td>
                        <td><input type="text" class="w-full pl-3" name="option1" value="15"></td>
                    </tr>
                    <tr>
                        <td class=""><input type="checkbox" class="form-check-input" id="cb-option2" name="cb-option2" value="2"></td>
                        <td><input type="text" class="w-full pl-3" name="option1" value="20"></td>
                    </tr>
                    <tr>
                        <td class=""><input type="checkbox" class="form-check-input" id="cb-option2" name="cb-option2" value="2"></td>
                        <td><input type="text" class="w-full pl-3" name="option1" value="24"></td>
                    </tr>
                    <tr>
                        <td class=""><input type="checkbox" class="form-check-input" id="cb-option2" name="cb-option2" value="2"></td>
                        <td><input type="text" class="w-full pl-3" name="option2" placeholder="Option 5"></td>
                    </tr>
                    <tr>
                        <td class=""><input type="checkbox" class="form-check-input" id="cb-option2" name="cb-option2" value="2"></td>
                        <td><input type="text" class="w-full pl-3" name="option2" placeholder="Option 6"></td>
                    </tr>
                </table>

            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>

    </div>
    <!-- end wrapper -->
</body>
</html>
